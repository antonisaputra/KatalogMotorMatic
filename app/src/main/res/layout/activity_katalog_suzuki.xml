<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="24dp"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:layout_marginBottom="32dp"
        android:text="Katalog Motor"
        android:textColor="#040304"
        android:textSize="29sp"
        android:textStyle="bold" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tombol_suzuki_address"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_marginStart="60px"
                android:layout_marginLeft="60px"
                android:src="@drawable/suzuku_address"
                android:layout_weight="1"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                />
            <ImageButton
                android:id="@+id/tombol_suzuki_address_fi"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_marginStart="60px"
                android:layout_marginLeft="60px"
                android:src="@drawable/suzuki_address_fi"
                android:layout_weight="1"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                />
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tombol_suzuki_next"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:layout_marginStart="60px"
                android:layout_marginLeft="60px"
                android:src="@drawable/suzuki_next_fi"
                android:layout_weight="1"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>